<odoo>
    <data>
        <!-- Inherit Partner Form View to add Háluc Points -->
        <record id="view_partner_form_haluc_points" model="ir.ui.view">
            <field name="name">res.partner.form.haluc.points</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Háluc Points" name="haluc_points_page">
                        <group>
                            <field name="haluc_point_balance" readonly="1"/>
                        </group>
                        <field name="haluc_point_transaction_ids" readonly="1">
                            <tree string="Háluc Points History">
                                <field name="name"/>
                                <field name="date"/>
                                <field name="points"/>
                                <field name="category"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>